<div class="mt-8">
    <div class="flex flex-col">

        <div class="flex flex-col w-1/2 items-center gap-2">
            <label for="avatar_form_avatar"
                   class="w-40 h-40 bg-green-100 bg-center bg-contain bg-no-repeat hover:bg-gray-300 cursor-pointer duration-150 rounded-full"
                   style="background-image: url({% if app.user.filename %}{{ vich_uploader_asset(app.user,'avatar') }}{% else %}/images/avatar/avatar_default.jpg{% endif %})">
            </label>
            <h3 class="text-center">Avatar</h3>
        </div>
        <div class="flex w-1/2">
        <hr />
        </div>
        <div class="flex flex-row justify-between">
            <div class="flex w-1/2 h-0">
                {{ form_start(formAvatar,{attr:{class:'form_avatar'}}) }}
                {{ form_row(formAvatar.avatar,{attr:{class:'avatar'}}) }}
                {{ form_row(formAvatar._token) }}
                {{ form_end(formAvatar, {render_rest: false}) }}
            </div>
        </div>
        <div class="flex flex-col w-1/2">
            <hr class="my-12 dark:border-gray-800"></hr>

            <h1 class="text-3xl font-medium mb-6 block">Modifier votre mot de passe</h1>
            {{ form_start(formPassword) }}
            {{ form_row(formPassword.oldPassword) }}
            {{ form_row(formPassword.password) }}
            {{ form_row(formPassword._token) }}
            <button class="px-4 py-3 bg-green-400 shadow rounded text-gray-100 flex flex-row gap-1 items-center"><Icon-feather size="16" name="lock"></Icon-feather>Modifier le mot de passe</button>
            {{ form_end(formPassword, {render_rest: false}) }}
        </div>
    </div>
</div>